{
  "name": "ruki-logger",
  "version": "1.3.4",
  "description": "A colorful, location-aware logger inspired by the user's Flutter/Dart logger, for Node.js/TypeScript.",
  "keywords": [
    "logger",
    "logging",
    "chalk",
    "typescript",
    "node"
  ],
  "license": "MIT",
  "author": "Ollie Ogunlade",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "default": "./dist/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/RookiePlayers/ruki-logger-js.git"
  },
  "bugs": {
    "url": "https://github.com/RookiePlayers/ruki-logger-js/issues"
  },
  "homepage": "https://github.com/RookiePlayers/ruki-logger-js#readme",
  "type": "module",
  "scripts": {
    "test": "echo \"No tests specified\" && exit 0",
    "test:watch": "jest --watch",
    "postinstall": "npx husky install",
    "prepare": "npm run build",
    "build": "tsup",
    "lint": "eslint . --ext .ts",
    "test:consumer": "node scripts/run-consumer-test.mjs",
    "setup:consumer": "node scripts/setup-consumer-link.mjs",
    "prepublishOnly": "npm run build && npm run test:consumer"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.2",
    "@types/node": "^20.14.9",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.1.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "chalk": "^5.3.0",
    "commitlint": "^20.1.0",
    "date-fns": "^4.1.0",
    "eslint-plugin-unused-imports": "^4.3.0"
  },
  "engines": {
    "node": ">=18"
  }
}
