{
  "name": "ruki-logger",
  "version": "1.0.0",
  "description": "A colorful, location-aware logger inspired by the user's Flutter/Dart logger, for Node.js/TypeScript.",
  "keywords": [
    "logger",
    "logging",
    "chalk",
    "typescript",
    "node"
  ],
  "license": "MIT",
  "author": "Ollie Ogunlade",
  "repository": {
    "type": "git",
    "url": "https://github.com/RookiePlayers/ruki-logger-js.git"
  },
  "bugs": {
    "url": "https://github.com/RookiePlayers/ruki-logger-js/issues"
  },
  "homepage": "https://github.com/RookiePlayers/ruki-logger-js#readme",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsc -p .",
    "lint": "eslint . --ext .ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "example": "ts-node example/index.ts",
    "test": "echo \"No tests specified\" && exit 0",
    "postinstall": "npx husky"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.2",
    "@types/node": "^20.14.9",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "chalk": "^5.3.0",
    "commitlint": "^20.1.0",
    "eslint-plugin-unused-imports": "^4.3.0"
  },
  "engines": {
    "node": ">=18"
  }
}
