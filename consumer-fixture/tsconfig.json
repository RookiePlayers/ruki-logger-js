{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "ruki-logger": [
        "../dist/index.d.ts",
        "../dist/index.js"
      ],
      "ruki-logger/*": [
        "../dist/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}
